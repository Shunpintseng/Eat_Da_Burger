<h1>Burgers!</h1>

<h2>Delicious Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless }}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>So Yummy!</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Order a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

 
  <button type="submit">More Burger</button>
</form>
